<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:syle="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="4dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?selectableItemBackground">


    <RelativeLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/article_title"
            style="@style/MainGridItemHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--
            OLD STUFF
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:paddingLeft="16dp"
                    android:paddingTop="4dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/gradient_scrim_top_down"
        -->


        <TextView
            android:id="@+id/article_subtitle"
            style="@style/MainGridItemSubHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <!--
        OLD STUFF
                    style="@style/TextAppearance.AppCompat.Body1"

                    android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:paddingTop="8dp"
        -->


    </RelativeLayout>

    <!-- OLD Stuff
                android:textColor="#6000"


          imageview  android:background="@color/photo_placeholder"


    -->


</android.support.v7.widget.CardView>
